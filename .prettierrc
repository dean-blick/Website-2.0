{
	"useTabs": true,
	"singleQuote": true,
	"semi": false,
	"trailingComma": "none",
	"singleAttributePerLine": false,
	"printWidth": 1000,
	"tabWidth": 4,
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
